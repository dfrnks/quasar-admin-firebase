{
    "hosting": {
        "public": "dist/pwa-mat",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "service-worker.js",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=360"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
